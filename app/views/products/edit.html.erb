<h2> Updating new product </h2>
<%= form_for @product do |f| %>

<%= f.label :category_id %><br/>
<%= f.collection_select :category_id, Category.all, :id, :name, prompt: "Select Category" %><br/>

<%= f.label :Name %><br/>
<%= f.text_field :name %><br/>

<%= f.label :Description  %><br/>
<%= f.text_area :description,rows:10,cols:50 %><br/>

<%= f.label :Price %><br/>
<%= f.text_field :price %><br/>

<%= f.label :stock %><br/>
<%= f.text_field :stock %><br/>

<%= f.label :cod_eligibility %><br/>
<%= f.check_box :cod_eligibility %><br/>

<%= f.label :image_url %><br/>
<%= f.text_field :image_url %><br/>

<%= f.submit %>
<% end %>
